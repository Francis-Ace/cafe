<div style="margin-top: 12px">

<%= form_with(url: search_path, local: true, method: "get") do %>
  <div class="field has-addons">
    <div class="control">
      <%= text_field_tag(:search_term, nil, class: 'input', placeholder: 'Search for product') %>
    </div>
    <div class="control">
      <select name="search_product">
      <option value="" selected="selected">Category</option>
        <option value="158" >coffee</option>
        <option value="159" >food</option>
        <option value="160">dessert</option>
        <option value="161">beer</option>
      </select>
    </div>
    <div class="control">
      <%= submit_tag("Search", class: 'button is-info') %>
    </div>
  </div>
<% end %>
</div>